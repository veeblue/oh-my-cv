{
  "buildCommand": "pnpm build:pkg && cd site && npm run build",
  "outputDirectory": "site/dist",
  "installCommand": "pnpm install",
  "framework": "nuxtjs",
  "devCommand": "pnpm dev",
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}